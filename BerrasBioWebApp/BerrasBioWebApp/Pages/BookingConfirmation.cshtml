@page
@model BerrasBioWebApp.Pages.BookingConfirmationModel

@{
    ViewData["Title"] = "BookingConfirmation";
}

<h1>Bokningsbekräftelse</h1>

<div>
    <h4>Bokning</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Name)
        </dt>
        <dd class="col-sm-10">
            @Model.Booking.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Model.Booking.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.NumOfTickets)
        </dt>
        <dd class="col-sm-10">
            @Model.Booking.NumOfTickets
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.FilmSchedule.Film)
        </dt>
        <dd class="col-sm-10">
            @Model.Booking.FilmSchedule.Film.Title
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.FilmSchedule.ShowTime)
        </dt>
        <dd class="col-sm-10">
            @Model.Booking.FilmSchedule.ShowTime
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Tillbaka till start</a>
</div>
